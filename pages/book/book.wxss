.container{
  background: #f5f5f5;
}
.book-head{
  position: fixed;
  display: flex;
  top: 0;
  width: 100%;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  box-shadow: 0 0 3px 0 #e3e3e3;
  background: #fff;
  color: #999;
  z-index: 2;
}
.search{
  display: flex;
  width: 80%;
  height: 60rpx;
  /*line-height: 60rpx;*/
  border-radius: 30rpx;
  /*text-align: center;*/
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  line-height: 0;
  background: #f5f5f5;
}
.search image{
  width: 34rpx;
  height: 34rpx;
  vertical-align:middle;
  margin-right:10rpx;
}
.book-list{
  /*display: flex;*/
  /*flex-wrap: wrap;*/
  /*justify-content: space-between;*/
  padding-top: 130rpx;
}
.book-list .head-img{
  display: flex;
  justify-content: center;
  width:100%;
  height: 34rpx;
}
.book-list .head-img image{
  width: 107rpx;
  height: 34rpx;
}
.book-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 90rpx
}
.book-item{
  margin-top: 10rpx;
}