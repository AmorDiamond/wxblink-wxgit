.container{
  background: #f5f5f5;
}
.book-info{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
}
.book-info .book-title{
  margin-top: 20rpx;
  font-weight: 700;
}
.book-info .book-author{
  font-size: 28rpx;
  color: #999;
}
.book-img{
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.sub-container{
  margin-top: 40rpx;
  padding: 0 40rpx 40rpx;
  background: #fff;
}
.title{
  color: #2f2f2f;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  padding: 20rpx 0;
}
.book-desc{
  text-indent: 2em;
}
.comments .item{
  margin: 0 15rpx 10rpx 0;
}
.comment-nums{
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.book-ft{
  height: 80rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  border-top: 1px solid #e3e3e3;
  background: #fff;
}
.comments w-tag:nth-child(2) view{
  background: #fffbdd;
}
.comments w-tag:nth-child(3) view{
  background: #eefbff;
}