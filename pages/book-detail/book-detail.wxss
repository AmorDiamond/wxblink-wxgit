.container{
  background: #f5f5f5;
  padding-bottom:100rpx;
}
.book-info{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
}
.book-info .book-title{
  margin-top: 20rpx;
  font-weight: 700;
}
.book-info .book-author{
  font-size: 28rpx;
  color: #999;
}
.book-img{
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.sub-container{
  margin-top: 40rpx;
  padding: 0 40rpx 40rpx;
  background: #fff;
}
.title{
  color: #2f2f2f;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  padding: 20rpx 0;
}
.book-desc .content{
  display: inline-block;
  font-size: 32rpx;
  text-indent: 2em;
}
.comments .item{
  display: inline-block;
  margin: 0 15rpx 10rpx 0;
}
.comment-nums{
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.book-other{
  font-size: 28rpx;
  color: #666;
}
.book-other .desc{
  display: flex;
  flex-direction: column;
  color: #999;
  margin-right: 30rpx;
}
.book-other .content{
  display: flex;
}
.book-ft{
  display: flex;
  width: 100%;
  height: 100rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  border-top: 1px solid #e3e3e3;
  background: #fff;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  z-index: 2;
}
.book-ft .input{
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #999;
  border-radius: 40rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #aaa;
}
.book-ft .like{
  margin: 8rpx 40rpx 0;
}
.comment-panel{
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 3;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -1px 10px #aaa;
  box-sizing: border-box;
  font-size: 28rpx;
}
.comment-panel{
  color: #aaa;
}
.comment-panel .cancel{
  float: right;
  text-align: right;
  border: 1px solid #e3e3e3;
  border-radius: 8rpx;
  padding: 4rpx 14rpx;
  color: #666;
}
.comment-panel .comment-list{
  margin: 40rpx 20rpx 30rpx;
}
.comment-panel input{
  height: 60rpx;
  border-radius: 40rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  background: #ccc;
  color: #333;
}
.comment-panel .input-placeholder{
  color: #999;
}
.mask-cover{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, .6);
}
.comments w-tag:nth-child(1) view{
  background: #fffbdd;
}
.comments w-tag:nth-child(2) view{
  background: #eefbff;
}
.no-data-tips{
  font-size: 28rpx;
  text-align: center;
  color: #666;
}