.container{
  position: fixed;
  width: 100%;
  z-index: 2;
  background-color: #fff;
}
.search-hd{
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}
.search-hd .search-con{
  position: relative;
  flex: 1;
  margin-right: 20rpx;
}
.search-con input{
  height: 60rpx;
  border-radius: 60rpx;
  padding: 0 60rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
}
.search-hd .search-icon, .search-hd .clear-icon{
  position: absolute;
  left: 16rpx;
  top: 16rpx;
}
.search-hd .clear-icon{
  left: auto;
  right: 16rpx;
}
.search-hd .cancel{
  font-size: 32rpx;
  color: #666;
}
.sub-container{
  padding: 0 20rpx;
  margin-top: 80rpx;
}
.sub-container .list{
  font-size: 28rpx;
  padding: 0 20rpx;
}
.sub-container .list .item{
  display: inline-block;
  margin: 0 15rpx 10rpx 0;
}
.title{
  position: relative;
  padding-left: 10px;
  font-size: 32rpx;
  line-height: 32rpx;
  margin-bottom: 20rpx;
}
.title::before{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  border-left: 4px solid #000;
}
.no-data-tips{
  font-size: 26rpx;
  color: #666;
  text-indent: 20rpx;
}


.book-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 100rpx 90rpx 0;
}
.book-item{
  margin-top: 10rpx;
}