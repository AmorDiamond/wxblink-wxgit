.music-container{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.music-control{
  position: relative;
  display: flex;
  width: 100%;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 170rpx;
}
.music-container .music-bg{
  width: 422rpx;
  height: 422rpx;
  border-radius: 50%;
}
.music-bg.active{
  animation: music-rotate infinite 10s linear;
}
.play-btn{
  position: absolute;
  top: 50%;
  margin-top: -60rpx;
  width: 120rpx;
  height: 120rpx;
}
.music-tag{
  position: absolute;
  left: 40rpx;
  bottom: -64rpx;
  width: 44rpx;
  height: 127rpx;
}
.text{
  max-width: 520rpx;
}
@keyframes music-rotate {
  from{
    transform: rotate(0)
  }
  to{
    transform: rotate(360deg)
  }
}